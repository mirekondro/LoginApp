<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LoginApp.Views.MainWindow"
        Title="Login / Registrace"
        Width="400" Height="300">
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Uživatelské jméno:"/>
        <TextBox x:Name="UsernameBox"/>

        <TextBlock Text="Heslo:"/>
        <TextBox x:Name="PasswordBox" PasswordChar="*"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button x:Name="RegisterButton" Content="Registrace" Width="120"/>
            <Button x:Name="LoginButton" Content="Přihlášení" Width="120"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Foreground="Red"/>
    </StackPanel>
</Window>
