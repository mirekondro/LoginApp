<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LoginApp.Views.MainWindow"
        Title="Login / Registrace"
        Width="400" Height="450">

    <StackPanel Margin="20" Spacing="10">

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock x:Name="LanguageLabel" Text="Jazyk:" VerticalAlignment="Center"/>
            <ComboBox x:Name="LanguageCombo" Width="150">
                <ComboBoxItem Content="Čeština"/>
                <ComboBoxItem Content="English"/>
            </ComboBox>
        </StackPanel>

        <StackPanel x:Name="LoginPanel" Spacing="10">
            <TextBlock x:Name="LoginUserLabel" Text="Email:"/>
            <TextBox x:Name="LoginUsernameBox"/>
            <TextBlock x:Name="LoginPassLabel" Text="Heslo:"/>
            <TextBox x:Name="LoginPasswordBox" PasswordChar="*"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="LoginButton" Content="Přihlášení" Width="120"/>
                <Button x:Name="ShowRegisterButton" Content="Registrace" Width="120"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="RegisterPanel" Spacing="10" IsVisible="False">
            <TextBlock x:Name="FirstNameLabel" Text="Jméno:"/>
            <TextBox x:Name="FirstNameBox"/>
            <TextBlock x:Name="LastNameLabel" Text="Příjmení:"/>
            <TextBox x:Name="LastNameBox"/>
            <TextBlock x:Name="EmailLabel" Text="Email:"/>
            <TextBox x:Name="EmailBox"/>
            <TextBlock x:Name="RegPassLabel" Text="Heslo:"/>
            <TextBox x:Name="RegisterPasswordBox" PasswordChar="*"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="RegisterButton" Content="Dokončit registraci" Width="150"/>
                <Button x:Name="BackToLoginButton" Content="Zpět" Width="80"/>
            </StackPanel>
        </StackPanel>

        <TextBlock x:Name="StatusText" Foreground="Red"/>
    </StackPanel>
</Window>
